{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@aegis-frontend/source"],
    "baseUrl": ".",
    "paths": {
      "@aegis/shared": ["libs/aegis/shared/src/index.ts"],
      "@aegis/ui": ["libs/aegis/ui/src/index.ts"],
      "@utils": ["libs/utils/src/index.ts"]
    }
  }
}
