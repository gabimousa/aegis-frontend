{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Aegis App (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/aegis/src",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "preLaunchTask": "nx-serve-aegis",
      "presentation": {
        "group": "debug-aegis",
        "order": 1
      }
    },
    {
      "name": "Debug Aegis App (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/aegis/src",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "preLaunchTask": "nx-serve-aegis",
      "presentation": {
        "group": "debug-aegis",
        "order": 2
      }
    },
    {
      "name": "Attach to Aegis App",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/apps/aegis/src",
      "sourceMaps": true,
      "presentation": {
        "group": "debug-aegis",
        "order": 3
      }
    },
    {
      "name": "Debug Aegis Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run", "--project", "aegis"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "presentation": {
        "group": "debug-tests",
        "order": 1
      }
    },
    {
      "name": "Debug E2E Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test"],
      "cwd": "${workspaceFolder}/apps/aegis-e2e",
      "env": {
        "NODE_ENV": "test"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "presentation": {
        "group": "debug-tests",
        "order": 2
      }
    },
    {
      "name": "Debug Current Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run", "--project", "aegis", "${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "presentation": {
        "group": "debug-tests",
        "order": 3
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Aegis Full Stack",
      "configurations": ["Debug Aegis App (Chrome)"],
      "presentation": {
        "group": "compounds",
        "order": 1
      }
    }
  ]
}
